[bar/general]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Iosevka Nerd Font:pixelsize=10;1
font-1 = FontAwesome:size=9;1
font-2 = UbuntuMono:size=9;1
font-3 = weathericons-regular-webfont:size=12;1

cursor-click = pointer
cursor-scroll = ns-resize

[bar/top]
inherit = bar/general

modules-left = i3
modules-right = updates bluetooth xbacklight pulseaudio xkeyboard wlan-latitude-5400 eth-l5400 eth-l5400-hub date powermenu

[bar/bottom]
inherit = bar/general
bottom=true
height=30
padding-left = 1
font-0 = Iosevka Nerd Font:pixelsize=9;1

{% if ansible_hostname == 'hbuyse-latitude5400' %}
modules-left = vpn
{% endif %}
modules-right = filesystem memory cpu battery-combined tray

[bar/t480]
inherit = bar/general

modules-left = i3
modules-right = updates bluetooth xbacklight pulseaudio xkeyboard wlan-t480 eth-t480 eth-t480-hub date powermenu

tray-position = none

[bar/t480-bottom]
inherit = bar/general
bottom=true
height=30
padding-left = 1
font-0 = Iosevka Nerd Font:pixelsize=9;1

# padding-left = 2

modules-right = filesystem memory cpu battery-combined temperature tray
