{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "small",
    "padding": {
      "top": 1
    }
  },
  "display": {
    "separator": "",
    "key": { "width": 15 }
  },
  "modules": [
    {
      "key": "╭───────────╮",
      "type": "custom"
    },
    {
      // draw borders first to make colors of left and right border consistent
      "key": "│           │\u001b[11D\u001b[31m user",
      "type": "title",
      "format": "{user-name}"
    },
    {
      "key": "│           │\u001b[11D\u001b[32m󰇅 hname",
      "type": "title",
      "format": "{host-name}"
    },
    {
      "key": "│           │\u001b[11D\u001b[33m󰅐 uptime",
      "type": "uptime"
    },
    {
      "key": "│           │\u001b[11D\u001b[34m󰟾 distro",
      "type": "os"
    },
    {
      "key": "│           │\u001b[11D\u001b[35m kernel",
      "type": "kernel"
    },
    {
      "key": "│           │\u001b[11D\u001b[36m󰇄 desktop",
      "type": "de"
    },
    {
      "key": "│           │\u001b[11D\u001b[31m term",
      "type": "terminal"
    },
    {
      "key": "│           │\u001b[11D\u001b[32m shell",
      "type": "shell"
    },
    {
      "key": "│           │\u001b[11D\u001b[33m󰍛 cpu",
      "type": "cpu",
      "temp": true
    },
{% for mount in ansible_mounts|sort(attribute='mount') %}
{% if mount.fstype in ['ext4', 'vfat'] %}
    {
      "key": "│           │\u001b[11D\u001b[34m󰉉 disk",
      "type": "disk",
      "folders": "{{ mount.mount }}",
      "format": "{{ mount.mount }}: {size-used} / {size-total} ({size-percentage}) - {filesystem}"
	},
{% endif %}
{% endfor %}
    {
      "key": "│           │\u001b[11D\u001b[35m memory",
      "type": "memory"
    },
    {
      "key": "│           │\u001b[11D\u001b[36m󰩟 network",
      "type": "localip",
      "format": "{ipv4} ({ifname})"
    },
    {
      "key": "│           │\u001b[11D\u001b[31m gpu",
      "type": "gpu",
      "hideType": "integrated",
      "temp": true
    },
    {
      "key": "├───────────┤",
      "type": "custom"
    },
    {
      "key": "│           │\u001b[11D\u001b[m colors",
      "type": "colors",
      "symbol": "circle"
    },
    {
      "key": "╰───────────╯",
      "type": "custom"
    }
  ]
}
