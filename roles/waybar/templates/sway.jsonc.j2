[
  {
    "layer": "top",
    "position": "top",
    "height": 32,
    "modules-left": ["sway/workspaces"],
    "modules-center": ["sway/mode", "custom/wf-recorder"],
    "modules-right": [
      // "custom/playerctl",
      "custom/weather",
      "custom/sunset",
      "custom/idle_inhibitor",
      "custom/updates",
      "bluetooth",
      "backlight",
      "pulseaudio",
      "sway/language",
      "network",
      "clock",
      "custom/power"
    ],
    "include": ["~/.config/waybar/modules.jsonc"]
  },
  {
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "modules-left": ["systemd-failed-units", "privacy"],
    "modules-right": [
      "power-profiles-daemon",
{% for mount in ansible_mounts %}
{% if mount.fstype in ['ext4', 'vfat'] %}
      "disk#{{ mount.mount | replace('/', '_')}}",
{% endif %}
{% endfor %}
      "memory",
      "cpu",
      "custom/battery",
      "tray"
    ],
    "include": ["~/.config/waybar/modules.jsonc"]
  }
]
